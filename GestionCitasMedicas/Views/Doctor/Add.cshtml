@model GestionCitasMedicas.Models.DOCTOR

@{
    ViewBag.Title = "Add";
}
@using (Html.BeginForm("Add", "Doctor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="container">
        <div class="distanciaCajasGrandes">
            <h2 style="color:blue">Formulario de Doctor</h2>
        </div>
        <div class="distanciaCajasGrandes">
            @Html.LabelFor(x => x.nombre)
            <div class="distanciaCajasHijos">
                @Html.TextBoxFor(x => x.nombre, new { @class = "inputForm" })
            </div>
            <div class="distanciaCajasHijos">
                @Html.ValidationMessage("Nombre", new { @class = "text-danger" })
            </div>
        </div>

        <div class="distanciaCajasGrandes">
            @Html.LabelFor(x => x.apellido)
            <div class="distanciaCajasHijos">
                @Html.TextBoxFor(x => x.apellido, new { @class = "inputForm" })
            </div>
            <div class="distanciaCajasHijos">
                @Html.ValidationMessage("Apellido", new { @class = "text-danger" })
            </div>
        </div>

        <div class="distanciaCajasGrandes">
            @Html.LabelFor(x => x.telefono)
            <div class="distanciaCajasHijos">
                @Html.TextBoxFor(x => x.telefono, new { @class = "inputForm" })
            </div>
            <div class="distanciaCajasHijos">
                @Html.ValidationMessage("Telefono", new { @class = "text-danger" })
            </div>
        </div>

        <div class="distanciaCajasGrandes">
            @Html.LabelFor(x => x.id_especialidad)
            <div class="distanciaCajasHijos">
                @Html.DropDownList("id_especialidad", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>


        <div class="distanciaCajasGrandes">
            <input type="submit" class="btn btn-success mx-2" value="Crear" />
        </div>
    </div>
}